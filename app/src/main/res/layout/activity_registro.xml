<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Registro">

<!--TextView de título del activity-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:text="REGISTRO"
        android:textColor="@color/purple"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="1dp" />
    <!--EditText con hint para el nombre de usuario-->
    <EditText
        android:id="@+id/user_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Usuario"
        android:padding="30dp"
        android:textSize="20dp" />
    <!--EditText con hint para la contraseña de usuario-->
    <EditText
        android:id="@+id/password_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:padding="30dp"
        android:textSize="20dp" />
    <!--EditText con hint para la edad del usuario, se pone teclado numérico-->
    <EditText
        android:id="@+id/edad_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Edad"
        android:inputType="number"
        android:padding="30dp"
        android:textSize="20dp" />
    <!--EditText con hint para la dirección de usuario-->
    <EditText
        android:id="@+id/direccion_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Direccion"
        android:padding="30dp"
        android:textSize="20dp" />
    <!--Botón para registrar al usuario-->
    <Button
        android:id="@+id/buttonRegistrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:padding="15dp"
        android:text="Registrar"
        android:textSize="30dp" />

</LinearLayout>